<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="gripperViewModel"
            type="com.example.inzynierka_app.viewmodel.GripperViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.ManualFragment">

        <LinearLayout
            android:id="@+id/llAuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/parameters"
                android:textColor="@color/white"
                android:textSize="@dimen/heading_text_size"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_top"/>

            <LinearLayout
                android:id="@+id/llFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/param_margin_bottom"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="@dimen/param_margin_bottom">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/param_margin_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStepTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step_time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/params_text_size" />

                    <TextView
                        android:id="@+id/tvStepTimeDisp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/params_margin_start"
                        android:hint="@string/_0_hint"/>

                    <TextView
                        android:id="@+id/tvStepTimeUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="@string/unit_s" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCycles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/average_step_time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/params_text_size" />

                    <TextView
                        android:id="@+id/tvStepAvrTimeDisp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/params_margin_start"
                        android:hint="@string/_0_hint"/>

                    <TextView
                        android:id="@+id/tvStepAvrTimeUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="@string/unit_s" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/param_margin_bottom"
                android:background="@color/orange"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/commands"
                android:textColor="@color/white"
                android:textSize="@dimen/heading_text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>