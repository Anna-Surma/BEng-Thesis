<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="gripperViewModel"
            type="com.example.inzynierka_app.viewmodel.GripperViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.ManualFragment">

        <LinearLayout
            android:id="@+id/llAuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvStepNr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="@string/step_1"
                android:text="@{context.getString(gripperViewModel.stepsResponse.text)}"
                android:textSize="@dimen/mode_text_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivStepImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                tools:src="@drawable/left_down_close"
                app:imageResource="@{gripperViewModel.stepsResponse.drawable}"
                android:layout_marginHorizontal="50dp">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/param_margin_bottom"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/commands"
                android:textSize="@dimen/heading_text_size"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llspin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="@+id/btnStep"
                    app:layout_constraintBottom_toBottomOf="@+id/btnStep"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnStep">

                    <TextView
                        android:id="@+id/tvStartPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/go_to"
                        android:textSize="@dimen/params_text_size" />

                    <Spinner
                        android:id="@+id/sStartPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/params_margin_start"
                        android:entries="@array/start_point"
                        android:textSize="@dimen/params_text_size"
                        android:onItemSelected="@{(parent,view,pos,id)-> gripperViewModel.writeStartPoint(parent.getItemAtPosition(pos).toString())}"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btnStep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/step"
                    android:layout_gravity="center"
                    app:layout_constraintStart_toEndOf="@+id/llspin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>