<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.WelcomeFragment">

        <ImageView
            android:id="@+id/blum_map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/blum_mapa_cut"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/main_layout"
            app:layout_constraintVertical_weight="1">
        </ImageView>

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/blum_map"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/company_desc_background"
            app:layout_constraintVertical_weight="2"
>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/company_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/company_desc"
                        android:lineHeight="30dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@+id/blum_map">
                    </TextView>

                    <Button
                        android:id="@+id/start_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:text="START"
                        android:textSize="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center">
                    </Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SOCIAL MEDIA"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp">
                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/fb_icon"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/fb_icon" />

                        <ImageView
                            android:id="@+id/inst_icon"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/inst_icon">
                        </ImageView>

                        <ImageView
                            android:id="@+id/pint_icon"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/pint_icon" />

                        <ImageView
                            android:id="@+id/yt_icon"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/yt_icon" />

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>