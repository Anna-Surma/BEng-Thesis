<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.inzynierka_app.fragment.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.inzynierka_app.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_autoFragment"
            app:destination="@id/autoFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.inzynierka_app.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
 />
    </fragment>
    <fragment
        android:id="@+id/manualFragment"
        android:name="com.example.inzynierka_app.fragment.ManualFragment"
        android:label="fragment_manual"
        tools:layout="@layout/fragment_manual" />
    <fragment
        android:id="@+id/autoFragment"
        android:name="com.example.inzynierka_app.fragment.AutoFragment"
        android:label="fragment_auto"
        tools:layout="@layout/fragment_auto" />
    <fragment
        android:id="@+id/blockFragment"
        android:name="com.example.inzynierka_app.fragment.BlockFragment"
        android:label="fragment_block" />
</navigation>